{
  "name": "clip-fuse",
  "version": "0.0.1",
  "description": "ClipFuse: A simple video merging app with drag & drop and sorting",
  "main": "main.js",
  "author": "7rikazhexde <33836132+7rikazhexde@users.noreply.github.com>",
  "engines": {
    "node": ">=20.15.1"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.clipfuse.app",
    "productName": "Clip Fuse",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "ffmpeg/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}